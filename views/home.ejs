<script>
// Load updates dynamically
document.addEventListener('DOMContentLoaded', async () => {
    try {
        const response = await fetch('/api/updates');
        const data = await response.json();
        
        if (data.success && data.updates.length > 0) {
            const updatesTrack = document.getElementById('updatesTrack');
            updatesTrack.innerHTML = '';
            
            data.updates.forEach((update, index) => {
                const updateCard = document.createElement('div');
                updateCard.className = 'update-card animate-on-scroll';
                updateCard.setAttribute('data-animation', 'fadeInUp');
                updateCard.setAttribute('data-delay', (index * 100).toString());
                
                updateCard.innerHTML = `
                    <div class="update-image" style="background-image: url('/uploads/${update.image}');"></div>
                    <div class="update-content">
                        <div class="update-date">${new Date(update.publishDate).toLocaleDateString()}</div>
                        <h3>${update.title}</h3>
                        <p>${update.excerpt}</p>
                        <a href="#" class="update-link">Read More →</a>
                    </div>
                `;
                
                updatesTrack.appendChild(updateCard);
            });
        }
    } catch (error) {
        console.error('Failed to load updates:', error);
    }
});

// Fix select dropdown issue
document.addEventListener('DOMContentLoaded', () => {
    const selectElement = document.getElementById('preferredCountry');
    if (selectElement) {
        // Add click event to ensure dropdown opens
        selectElement.addEventListener('mousedown', function(e) {
            if (this.disabled) return;
            
            // Force focus and click
            this.focus();
            
            // Small delay to ensure proper opening
            setTimeout(() => {
                if (document.activeElement === this) {
                    // Trigger the dropdown to open
                    const event = new MouseEvent('click', {
                        view: window,
                        bubbles: true,
                        cancelable: true
                    });
                    this.dispatchEvent(event);
                }
            }, 10);
        });
        
        // Improve accessibility
        selectElement.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                this.click();
            }
        });
    }
});
</script>

